# デフォルトモードを宣言
:: default

# 'window'という新しいモードを宣言（@でキープレスをキャプチャ）
:: window @

# focus window
# |                  | i3-wm       | yabai      |
# | ---------------- | ----------- | ---------- |
# | フォーカスの移動 | $mod + jkl; | alt + hjkl |
alt - 0x2C ; window
window < return ; default
window < h : yabai -m window --focus west; skhd -k "return"
window < j : yabai -m window --focus south; skhd -k "return"
window < k : yabai -m window --focus north; skhd -k "return"
window < l : yabai -m window --focus east; skhd -k "return"

# move window
# |                    | i3-wm                | yabai               |
# | -------------------| -------------------- | ------------------- |
# | ウィンドウをワープ | $mod + shift + jkl;  | shift + alt + hjkl  |
# | スペースにワープ   | $mod + shift + num   | shift + alt + 12345 |
# | ↑(prev/next)      | --                   | shift + alt + 9/0   |

window < shift - h : yabai -m window --warp west; skhd -k "return"
window < shift - j : yabai -m window --warp south; skhd -k "return"
window < shift - k : yabai -m window --warp north; skhd -k "return"
window < shift - l : yabai -m window --warp east; skhd -k "return"

window < shift - 1 : yabai -m window --space 1; skhd -k "return"
window < shift - 2 : yabai -m window --space 2; skhd -k "return"
window < shift - 3 : yabai -m window --space 3; skhd -k "return"
window < shift - 4 : yabai -m window --space 4; skhd -k "return"
window < shift - 5 : yabai -m window --space 5; skhd -k "return"
window < shift - 9 : yabai -m window --space prev; skhd -k "return"
window < shift - 0 : yabai -m window --space next; skhd -k "return"

# move display
window < ctrl - h : yabai -m display --focus prev; skhd -k "return"
window < ctrl - l : yabai -m display --focus next; skhd -k "return"

window < ctrl - 9 : yabai -m window --display prev; skhd -k "return"
window < ctrl - 0 : yabai -m window --display next; skhd -k "return"

# toggle window native fullscreen
window < shift - f : yabai -m window --toggle native-fullscreen; skhd -k "return"
# toggle window fullscreen zoom
window < f : yabai -m window --toggle zoom-fullscreen; skhd -k "return"
# float / unfloat window and restore position
window < m : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2; skhd -k "return"

# toggle window split type
window < g : yabai -m window --toggle split; skhd -k "return"

# rotate window
# rotate tree
window < z : yabai -m space --rotate 90; skhd -k "return"
# mirror tree y-axis
window < a : yabai -m space --mirror y-axis; skhd -k "return"
# mirror tree x-axis
window < s : yabai -m space --mirror x-axis; skhd -k "return"

